---
import '../styles/global.css';
import Header from '../components/layout/Header.astro';

export interface Props {
    title: string;
    description?: string;
};

const { title, description = "Portfolio de Arquitecto - Diseños únicos que transforman espacios" } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
        <meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" initial-scale="1.0" />
		<link rel="icon" type="image/svg+xml" href="/PortfolioArquitectoAstro/favicon.svg" />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Jost:ital,wght@0,100..900;1,100..900&family=Libre+Caslon+Text:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body class="min-h-screen bg-cream-50 text-cream-800 overflow-x-hidden">
        <!-- Navbar -->
        <Header />

        <main class="py-20 min-h-screen">
            <slot />
        </main>

        <!-- Footer -->
        <footer class="text-dark py-12 mt-16">
            <div class="container mx-auto px-6">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                    <!--Company Info -->
                    <div class="mb-8">
                        <div class="flex items-center mb-6">
                            <svg class="w-8 h-8 mr-3" viewBox="0 0 24 24">
                                <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
                            </svg>
                            <h5 class="text-xl font-bold">Estudio de Arquitectura</h5>
                        </div>
                        <p class="text-dark leading-relaxed">
                            Diseñamos espacios únicos que reflejan las necesidades y deseos
                            de quienes los habitarán, con pasión por cada detalle.
                        </p>
                    </div>

                    <!-- Services -->
                    <div class="mb-8">
                        <h6 class="text-lg font-semibold mb-4 relative">
                            Servicios
                            <div class="absolute bottom-0 left-0 w-8 h-0.5 bg-red-500" />
                        </h6>
                        <ul class="space-y-2">
                            <li class="flex items-center text-cream-900 hover:text-accent-300 transition-colors hover:translate-x-1 duration-300">
                                <svg class="w-4 h-4 mr-2" viewBox="0 0 24 24">
                                    <path d="M8.59 16.59L13.17 12 8.59 7.41 10 6l6 6-6 6-1.41-1.41z"/>
                                </svg>
                                Anteproyecto
                            </li>
                            <li class="flex items-center text-cream-900 hover:text-accent-300 transition-colors hover:translate-x-1 duration-300">
                                <svg class="w-4 h-4 mr-2" viewBox="0 0 24 24">
                                    <path d="M8.59 16.59L13.17 12 8.59 7.41 10 6l6 6-6 6-1.41-1.41z"/>
                                </svg>
                                Proyecto Ejecutivo
                            </li>
                            <li class="flex items-center text-cream-900 hover:text-accent-300 transition-colors hover:translate-x-1 duration-300">
                                <svg class="w-4 h-4 mr-2" viewBox="0 0 24 24">
                                    <path d="M8.59 16.59L13.17 12 8.59 7.41 10 6l6 6-6 6-1.41-1.41z"/>
                                </svg>
                                Direccion de Obra
                            </li>
                            <li class="flex items-center text-cream-900 hover:text-accent-300 transition-colors hover:translate-x-1 duration-300">
                                <svg class="w-4 h-4 mr-2" viewBox="0 0 24 24">
                                    <path d="M8.59 16.59L13.17 12 8.59 7.41 10 6l6 6-6 6-1.41-1.41z"/>
                                </svg>
                                Gerenciamiento
                            </li>
                        </ul>
                    </div>

                    <!-- Contact -->
                    <div class="mb-8">
                        <h6 class="text-lg font-semibold mb-4 relative">
                            Contacto
                            <div class="absolute bottom-0 left-0 w-8 h-0.5 bg-red-500" />
                        </h6>
                        <div class="space-y-3">
                            <div class="flex items-center text-cream-900 hover:text-accent-300 transition-colors hover:translate-x-1 duration-300">
                                <svg class="w-4 h-4 mr-3" viewBox="0 0 24 24">
                                    <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
                                </svg>
                                <span>Andris Santana</span>
                            </div>
                            <div class="flex items-center text-cream-900 hover:text-accent-300 transition-colors hover:translate-x-1 duration-300">
                                <svg class="w-4 h-4 mr-3" viewBox="0 0 24 24">
                                    <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
                                </svg>
                                <span>+1 829 xxx xxx</span>
                            </div>
                            <div class="flex items-center text-cream-900 hover:text-accent-300 transition-colors hover:translate-x-1 duration-300">
                                <svg class="w-4 h-4 mr-3" viewBox="0 0 24 24">
                                    <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
                                </svg>
                                <span>contacto@arquitecto.com</span>
                            </div>
                        </div>
                    </div>

                    <!-- Social -->
                    <div class="mb-8">
                        <h6 class="text-lg font-semibold mb-4 relative">
                            Siguenos
                            <div class="absolute bottom-0 left-0 w-8 h-0.5 bg-red-500" />
                        </h6>
                        <div class="flex flex-wrap gap-3">
                            <a href="#" class="w-12 h-12 bg-dark rounded-full flex items-center justify-center text-dark hover:text-dark hover:bg-red-500 transition-all duration-300 hover:-translate-y-1 hover:scale-110 hover:shadow-lg">
                                <svg class="w-5 h-5" viewBox="0 0 24 24">
                                    <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 5.079 3.158 9.417 7.618 11.174-.105-.949-.199-2.403.041-3.439.219-.937 1.406-5.957 1.406-5.957s-.359-.72-.359-1.781c0-1.663.967-2.911 2.168-2.911 1.024 0 1.518.769 1.518 1.688 0 1.029-.653 2.567-.992 3.992-.285 1.193.6 2.165 1.775 2.165 2.128 0 3.768-2.245 3.768-5.487 0-2.861-2.063-4.869-5.008-4.869-3.41 0-5.409 2.562-5.409 5.199 0 1.033.394 2.143.889 2.741.099.12.112.225.085.345-.09.375-.293 1.199-.334 1.363-.053.225-.172.271-.402.165-1.495-.69-2.433-2.878-2.433-4.646 0-3.776 2.748-7.252 7.92-7.252 4.158 0 7.392 2.967 7.392 6.923 0 4.135-2.607 7.462-6.233 7.462-1.214 0-2.357-.629-2.75-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146C9.57 23.812 10.763 24.009 12.017 24.009c6.624 0 11.99-5.367 11.99-11.988C24.007 5.367 18.641.001.012.001z"/>
                                </svg>
                            </a>
                            <a href="#" class="w-12 h-12 bg-dark rounded-full flex items-center justify-center text-dark hover:text-dark hover:bg-blue-600 transition-all duration-300 hover:-translate-y-1 hover:scale-110 hover:shadow-lg">
                                <svg class="w-5 h-5" viewBox="0 0 24 24">
                                    <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084-.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
                                </svg>
                            </a>
                            <a href="#" class="w-12 h-12 bg-dark rounded-full flex items-center justify-center text-dark hover:text-dark hover:bg-green-500 transition-all duration-300 hover:-translate-y-1 hover:scale-110 hover:shadow-lg">
                                <svg class="w-5 h-5" viewBox="0 0 24 24">
                                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
                                </svg>
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Footer Bottom -->
                <div class="border-t border-dark mtt-8 pt-8">
                    <div class="flex flex-col md:flex-row justify-between items-center">
                        <p class="flex flex-col md:flex-row justify-between items-center">
                            © {new Date().getFullYear()} Estudio de Arquitectura.
                        </p>
                        <p class="text-dark text-sm flex items-center">
                            Desarrollado con
                            <svg class="w-4 h-4 mx-1 text-red-500" viewBox="0 0 24 24">
                                <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                            </svg>
                            Astro
                        </p>
                    </div>
                </div>
            </div>
        </footer>

        <!-- back to Top Button -->
        <button
            class="back-to-top fixed bottom-8 right-8 w-12 h-12  backdrop-blur-sm rounded-full shadow-lg hover:bg-cream-300 hover:-translate-y-1 hover:shadow-xl transition-all duration-300 z-50 opacity-0 invisible"
            id="backToTop"
            title="Volver arriba">
            <svg class="w-6 h-6 mx-auto" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
            </svg>
        </button>

        <style>
            .nav-link::before {
                content: '';
                position: absolute;
                bottom: 0;
                left: 50%;
                width: 0;
                height: 2px;
                background: #ef4444;
                transition: all 0.3s ease;
                transform: translateX(-50%);
            }

            .nav-link:hover::before,
            .nav-link.active::before {
                width: 80%;
            }

            .back-to-top.visible {
                opacity: 1;
                visibility: visible;
            }
        </style>
	</body>
</html>

