---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import Heading from '../components/ui/Heading.astro';

const projects = await getCollection("projects");

const filteredProjects = projects
    .filter(projects => projects.data.type !== 'test')
    .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---

<Layout title="Projects" description="A list of my projects.">
    <main class="bg-cream-50 pt-12 pb-6">
        <section class="bg-white shadow-sm">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
                <div class="text-center">
                    <Heading level={2} text="Nustros" textGradient="Proyectos" className="mb-4" />
                    <p class="mt-4 text-xl text-darl max-w-2xl mx-auto">
                        Explorá nuestra colección de proyectos arquitectónicos que reflejan la identidad caribeña
                    </p>
                </div>
            </div>
        </section>

        <!-- Projects Grid -->
        <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {filteredProjects.map(project => (
                    <a
                        href={`/PortfolioArquitectoAstro/project/${project.slug}`}
                        class="group bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-300 hover:-translate-y-1 block focus:outline-none focus:ring-2 focus:ring-primary-500"
                        aria-label={`Proyecto: ${project.data.title}, Categoria: ${project.data.type}`}
                        tabindex="0"
                    >
                        <div class="aspect-w-16 aspect-h-9 overflow-hidden">
                            <img 
                                src={project.data.img.cover} 
                                alt={project.data.title} 
                                class="w-full h-64 object-cover group-hover:scale-105 transition-transform duration-300"
                                loading="lazy"
                            />
                        </div>

                        <div class="p-6">
                            <div class="flex items-center justify-between mb-3">
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                    {project.data.type}
                                </span>
                                <span class="text-sm text-gray-500">
                                    {project.data.date}
                                </span>
                            </div>

                            <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors">
                                {project.data.title}
                            </h3>

                            <p class="text-gray-600 mb-4 line-clamp-2">
                                {project.data.description}
                            </p>

                            <div class="flex items-center justify-between text-sm text-gray-500">
                                <div class="flex items-center">
                                    <Icon name="mdi:map-marker" class="w-4 h-4 mr-1" />
                                    {project.data.location}
                                </div>
                                <div class="flex items-center">
                                    <Icon name="mdi:fullscreen" class="w-5 h-5 mr-1" />
                                    {project.data.meters}
                                </div>  
                            </div>

                            <div class="flex flex-wrap gap-2 mt-4">
                                {project.data.tags.map(tag => (
                                    <span class="inline-block px-2 py-1 text-xs bg-gray-100 text-gray-600 rounded-md">
                                        {tag}
                                    </span>
                                ))}
                            </div>
                        </div>
                    </a>
                ))}
            </div>

            {filteredProjects.length === 0 && (
                <div class="text-center py-16">
                    <div class="max-auto w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mb-4">
                        <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                        </svg>
                    </div>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">
                        No hay proyectos disponibles
                    </h3>
                    <p class="text-gray-500">
                        Los proyectos aparecerán aquí una vez que sean publicados.
                    </p>
                </div>
            )}
        </section>
    </main>
</Layout>

