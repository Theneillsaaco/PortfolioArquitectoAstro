---
interface Props {
    text?: string;
    textGradient?: string;
    level?: 1 | 2 | 3 | 4;
    className?: string;
}

const { text = "", textGradient = "", level = 1, className = "" } = Astro.props;
const Tag = `h${level}`;
---

<Tag class:list={[
    "leading-tight",
    level === 1 && "text-5xl md:text-7xl font-black",
    level === 2 && "text-4xl md:text-5xl font-black",
    level === 3 && "text-2xl md:text-3xl font-black",
    level === 4 && "text-xl font-bold",
    "text-dark dark:text-white",
    "tracking-tight",
    className
]}>
    {text && (
        <>
            {text}
            {textGradient && " "}
        </>
    )}
    {textGradient && (
        <span class="bg-gradient-to-r from-yellow-400 to-orange-500 bg-clip-text text-transparent">
            {textGradient}
        </span>
    )}
</Tag>