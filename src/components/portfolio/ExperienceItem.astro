---
interface Props {
    title: string;
    description: string;
    subtitle?: string;
    date: string;
}

const { title, subtitle, description, date } = Astro.props;
---

<div class="relative mx-12 pb-12 grid before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:border-primary-200 before:content-[''] md:grid-cols-5 md:gap-10 md:space-x-4">
    <div class="relative pb-12 md:col-span-2">
        <div class="sticky top-0">
            <span class="text-primary-400 -left-[42px] absolute rounded-full text-5xl drop-shadow-[0px_0px_8px_rgba(153,175,122,1)]">&bull;</span>
        
            <h3 class="text-xl font-bold text-cream-900">{title}</h3>
            <h4 class="font-semibold text-xl text-accent-600">{subtitle}</h4>
            <time class="p-0 m-0 text-sm text-cream-700">{date}</time>
        </div>
    </div>
    <div class="relative flex flex-col gap-2 pb-4 text-gray-600 md:col-span-3">
        {description}
    </div>
</div>
