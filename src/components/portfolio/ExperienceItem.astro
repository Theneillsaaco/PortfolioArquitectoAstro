---
interface Props {
    title: string;
    description: string;
    subtitle?: string;
    date: string;
}

const { title, subtitle, description, date } = Astro.props;
---

<div class="relative pl-12 pb-12 md:grid md:grid-cols-5 md:gap-10 md:space-x-4 group">
    <!-- Timeline marker -->
    <span class="absolute left-0 top-2 w-4 h-4 rounded-full bg-primary-500 shadow-md group-hover:scale-110 transition-transform" />
    <span class="absolute left-1.5 top-6 w-0.5 h-full bg-primary-200" />

    <!-- Left (title & date ) -->
    <div class="md:col-span-2 space-y-1">
        <h3 class="text-xl font-semibold text-primary-900">{title}</h3>
        {subtitle && <h4 class="text-accent-600 font-medium">{subtitle}</h4>}
        <time class="inline-block mt-2 px-3 py-1 rounded-full bg-cream-200 text-sm text-primary-700 font-medium shadow-sm">
            {date}
        </time>
    </div>

    <!-- Right (description) -->
    <div class="md:col-span-3 mt-4 md:mt-0">
        <p class="text-secondary-600 leading-relaxed">{description}</p>
    </div>
</div>
