---
interface Props {
    title: string;
    description: string;
    subtitle?: string;
    date: string;
}

const { title, subtitle, description, date } = Astro.props;
---

<div class="relative mx-12 pb-12 grid md:grid-cols-5 md:gap-10 before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:border-black/20 before:content-['']">
    <div class="pb-12 md:col-span-2">
        <div class="sticky top-0">
            <span class="absolute -left-[42px] text-5xl text-accent-500 rounded-full drop-shadow-[0px_0px_8px_rgba(76,74,62,1)]">&bull;</span>
            <h3 class="text-xl font-bold text-cream-900">{title}</h3>
            <h4 class="text-xl font-semibold text-secondary-600">{subtitle}</h4>
            <time datetime={date} class="text-sm text-cream-700">{date}</time>
        </div>
    </div>
    <div class="flex flex-col gap-2 pb-4 text-dark md:col-span-3">{description}</div>
</div>
