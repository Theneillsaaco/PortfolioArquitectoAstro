---
import Heading from "../ui/Heading.astro"
import { Icon } from "astro-icon/components"

const points = [
    { icon: "mdi:lightbulb", title: "Diseño Inteligente", desc: "Cada espacio debe contar una historia única"},
    { icon: "mdi:heart", title: "Conexión Emocional", desc: "Arquitectura que conecta con las emociones" },
    { icon: "mdi:leaf", title: "Sostenibilidad", desc: "Respeto por el contexto cultural y ambiental" }
];

const skills = [
    { name: "AutoCAD", icon: "mdi:vector-square" },
    { name: "Revit", icon: "mdi:home-modern" },
    { name: "SketchUp", icon: "mdi:cube" },
    { name: "Fusion 360", icon: "mdi:cog-outline" },
    { name: "Photoshop", icon: "mdi:brush" },
    { name: "Illustrator", icon: "mdi:palette" }
];
---

<div class="bg-cream-50 pt-10 relative overflow-hidden">
    <div class="container mx-auto px-6">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
            <!-- Left Visual -->
            <div class="about-visual relative h-[500px]">
                <div class="relative w-full h-full rounded-3xl overflow-hidden shadow-xl z-20">
                    <img
                        src="https://images.unsplash.com/photo-1600566753151-384129cf4e3e?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80"
                        alt="Andrys en su estudio"
                        class="w-full h-full object-cover hover:scale-105 transition-transform duration-700"
                        loading="lazy"
                    />
                </div>

                <!-- Decorative Elements -->
                <div class="absolute inset-0 z-10 pointer-events-none">
                    <div class="absolute -top-5 -right-5 w-24 h-24 bg-gradient-to-br from-primary-500 to-primary-400 rounded-full opacity-15 animate-float" />
                    <div class="absolute -bottom-8 -left-8 w-20 h-20 bg-gradient-to-br from-accent-500 to-accent-400 rounded-xl opacity-15 animate-float animation-delay-2000 reverse" />
                    <div class="absolute top-1/2 -right-10 w-16 h-16 bg-secondary-500 rounded-full opacity-10 animate-float animation-delay-3000" />
                </div>
            </div>

            <!-- Right Content -->
            <div class="about-content lg:pl-8">
                <div class="inline-flex items-center gap-2 bg-primary-500/15 px-4 py-2 rounded-full text-sm font-medium upprcase tracking-wide text-primary-700 mb-6">
                    <Icon class="w-4 h-4 text-primary-600" name="mdi:account" />
                    <span>Sobre mi</span>
                </div>

                <Heading text="Transformando ideas en" textGradient="espacios unicos" level={2} />

                <p class="py-6 text-lg text-secondary-600 mb-10 leading-relaxed max-w-xl">
                    Mi pasión por la arquitectura nació de la fascinación por cómo los espacios
                    pueden transformar vidas. Desde Santiago, República Dominicana, he desarrollado
                    una filosofía de diseño que combina funcionalidad inteligente, belleza atemporal
                    y sostenibilidad responsable.
                </p>

                <!-- Philosophy Points -->
                <div class="space-y-6 mb-12">
                    {points.map(point => (
                        <div class="flex items-start gap-4">
                            <div class="flex-shrink-0 w-12 h-12 bg-cream-200 rounded-xl flex items-center justify-center shadow-sm">
                                {point.icon && <Icon class="w-6 h-6 text-accent-600" name={point.icon} />}
                            </div>
                            <div>
                                <h6 class="font-semibold text-primary-900 mb-1">{point.title}</h6>
                                <p class="text-primary-600">{point.desc}</p>
                            </div>
                        </div>
                    ))}
                </div>

                <!-- Skills -->
                 <div>
                    <h6 class="font-semibold text-primary-900 mb-4">Habilidades</h6>
                    <div class="flex flex-wrap gap-3">
                        {skills.map(skill => (
                            <div class="flex items-center gap-2 px-4 py-2 bg-cream-100 rounded-full shadow-sm hover:shadow-md transition text-sm text-primary-800">
                                <Icon name={skill.icon} class="w-4 h-4 text-accent-600" />
                                <span>{skill.name}</span>
                            </div>
                        ))}
                    </div>
                 </div>
            </div>
        </div>
    </div>
</div>