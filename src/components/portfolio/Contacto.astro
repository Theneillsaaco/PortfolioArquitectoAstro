---
import { Icon } from "astro-icon/components";
import Heading from "../ui/Heading.astro";

const contactMethods = [
    {
        label: "Ubicación",
        value: "Bávaro, Punta Cana<br>República Dominicana",
        icon: "mdi:map-marker"
    },
    {
        label: "Teléfono",
        value: "+1 829 983 2226",
        icon: "mdi:phone"
    },
    {
        label: "Email",
        value: "andryssantana2@gmail.com",
        icon: "mdi:email"
    }
];

const socials = [
    { href: "#", color: "hover:bg-green-600", icon: "mdi:whatsapp" }
];
---

<div class="py-20 bg-cream-50">
    <div class="container mx-auto px-6 max-w-screen-lg">
        <div class="space-y-8 text-center">
            <div class="inline-flex items-center gap-2 bg-primary-500/20 px-4 py-2 rounded-full text-sm font-semibold uppercase tracking-wide mb-6">
                <Icon class="w-4 h-4" name="portfolio/Message" />
                <span>Contacto</span>
            </div>

            <div class="text-center mb-12">
                <Heading text="Ponte en contacto" textGradient="conmigo" level={2} />
                <p class="text-cream-700 mt-4 max-w-xl mx-auto">
                    Siempre abierto a colaborar en proyectos creativos, nuevas ideas o simplemente charlar.
                </p>
            </div>

            <!-- Contact Methods -->
            <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
                {contactMethods.map(contactMethod => (
                    <div class="bg-cream-50 border border-cream-200 rounded-2xl p-6 shadow-sm hover:shadow-md hover:scale-105 hover:bg-cream-100 transition-all">
                        <div class="flex items-center gap-4">
                            <div class="w-12 h-12 flex items-center justify-center rounded-2xl bg-primary-100 text-primary-700">
                                {contactMethod.icon && <Icon class="w-6 h-6" name={contactMethod.icon} />}
                            </div>
                            <div>
                                <p class="text-sm font-medium text-cream-800">{contactMethod.label}</p>
                                <p class="text-cream-600 text-base leading-snug" set:html={contactMethod.value} />
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </div>

        <!-- Social Section -->
        <div class="mt-16 text-center">
            <h6 class="text-lg font-semibold text-cream-900 mb-6">Sigueme en redes</h6>
            <div class="flex justify-center gap-4">
                {socials.map(social => (
                    <a href={social.href} class={`w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center text-primary-700 border border-cream-200 ${social.color} hover:text-whiter hover:-translate-y-1 hover:shadow-lg transition-all duration-300`}>
                        <Icon class="w-6 h-6" name={social.icon} />
                    </a>
                ))}
            </div>
        </div>
    </div>
</div>