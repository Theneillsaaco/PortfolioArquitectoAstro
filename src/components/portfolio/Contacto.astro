---
import { Icon } from "astro-icon/components";
import Heading from "../ui/Heading.astro";

const contactMethods = [
    {
        label: "Ubicación",
        value: "Bávaro, Punta Cana<br>República Dominicana",
        icon: "mdi:map-marker"
    },
    {
        label: "Teléfono",
        value: "+1 829 983 2226",
        icon: "mdi:phone"
    },
    {
        label: "Email",
        value: "andryssantana2@gmail.com",
        icon: "mdi:email"
    }
];

const socials = [
    { href: "#", color: "hover:bg-green-500", icon: "mdi:whatsapp" }
];
---

<div class="py-12 bg-cream-100">
    <div class="container mx-auto px-6 max-w-screen-xl">
        <div class="space-y-8 text-center">
            <div class="inline-flex items-center gap-2 bg-primary-500/20 px-4 py-2 rounded-full text-sm font-semibold uppercase tracking-wide mb-6">
                <Icon class="w-4 h-4" name="portfolio/Message" />
                <span>Contacto</span>
            </div>

            <!-- Contact Methods -->
            <div class="space-y-4 max-w-2xl mx-auto">
                {contactMethods.map(contactMethod => (
                    <div class="flex items-center gap-4 p-5 bg-white rounded-2xl shadow-md border border-cream-200 hover:shadow-xl hover:translate-x-1 transition-all duration-300">
                        <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-400 rounded-xl flex items-center justify-center text-white">
                            {contactMethod.icon && <Icon class="w-6 h-6" name={contactMethod.icon} />}
                        </div>
                        <div>
                            <span class="block text-sm font-semibold text-cream-900 uppercase tracking-wide mb-1">
                                {contactMethod.label}
                            </span>
                            <span class="text-cream-700" set:html={contactMethod.value} />
                        </div>
                    </div>
                ))}
            </div>
        </div>

        <!-- Social Section -->
        <div class="space-y-6 text-center mt-12">
            <h6 class="text-lg font-semibold text-cream-900">Sigueme en redes</h6>
            <div class="flex justify-center gap-4">
                {socials.map(social => (
                    <a href={social.href} class={`w-12 h-12 bg-white rounded-full flex items-center justify-center text-cream-800 border border-cream-200 ${social.color} hover:text-whiter hover:-translate-y-1 hover:shadow-lg transition-all duration-300`}>
                        <Icon class="w-6 h-6" name={social.icon} />
                    </a>
                ))}
            </div>
        </div>
    </div>
</div>